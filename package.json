{
  "name": "remake-framework",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others 'npm:nodemon' 'npm:parcel' 'npm:sass' 'npm:copy-assets'",
    "nodemon": "nodemon server.js --watch ./ -e html,hbs,sass,css,js,png,gif,jpg,json --ignore node_modules/ --ignore .cache/ --ignore _remake/.sessions --ignore _remake-data",
    "parcel": "parcel ./project-files/assets/js/main.js --out-dir ./_remake/dist/ --out-file main.dist.js --no-hmr --log-level 2",
    "sass": "sass --watch project-files/assets/sass/main.sass _remake/dist/main.dist.css",
    "copy-assets": "copy-and-watch --watch project-files/assets/**/*.{ico,png,jpg,gif} _remake/dist",
    "build": "parcel build ./project-files/assets/js/main.js --out-dir ./_remake/dist/ --out-file main.dist.js --log-level 2 && sass --style=compressed project-files/assets/sass/main.sass _remake/dist/main.dist.css",
    "start": "node server.js",
    "clean": "rm -rf .cache && rm -rf _remake/dist"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "camelcase": "^5.3.1",
    "change-case": "^3.1.0",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "crostini": "^1.0.3",
    "deep-extend": "^0.6.0",
    "deepdash-es": "^4.2.5",
    "delegated-events": "^1.1.0",
    "directory-tree": "^2.2.3",
    "esm": "^3.2.25",
    "express": "^4.17.0",
    "express-session": "^1.16.2",
    "extract-zip": "^1.6.7",
    "handlebars": "^4.5.1",
    "handlebars-helpers": "^0.10.0",
    "jsonfile": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "mysql": "^2.17.1",
    "nanoid": "^2.0.3",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "path-match": "^1.2.4",
    "session-file-store": "^1.3.1",
    "shelljs": "^0.8.3",
    "upath": "^1.2.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "copy-and-watch": "^0.1.4",
    "nodemon": "^1.19.1",
    "parcel": "^1.12.4",
    "sass": "^1.22.9"
  }
}
