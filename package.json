{
  "name": "remake-framework",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run asset-bundler-initial && concurrently --kill-others 'npm:nodemon' 'npm:asset-bundler-watch'",
    "build": "npm run asset-bundler-production",
    "nodemon": "nodemon server.js --watch ./",
    "asset-bundler-initial": "node asset-bundler/initial-build.js",
    "asset-bundler-production": "node asset-bundler/initial-build.js production",
    "asset-bundler-watch": "node asset-bundler/",
    "build-selftest": "parcel build ./_remake/tests/remake-init-gen.js -d ./_remake/tests/ -o remake-init.js",
    "selftest": "npm run build-selftest && echo 'The self test page is ready. Go open the file at ./_remake/tests/selftest.html in your favorite browser.'"
  },
  "nodemonConfig": {
    "ignore": [
      ".cache/",
      "_remake/.sessions",
      "_remake/client-side",
      "_remake/dist",
      "_remake-data",
      "node_modules/",
      "app"
    ],
    "ext": "html,hbs,sass,css,js,png,gif,jpg,json"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "alias": {
    "remake-framework": "./_remake/client-side/index.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "camelcase": "^5.3.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "crostini": "^1.0.3",
    "deep-extend": "^0.6.0",
    "deepdash-es": "^4.2.5",
    "delegated-events": "^1.1.0",
    "directory-tree": "^2.2.3",
    "dotenv": "^8.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.0",
    "express-session": "^1.16.2",
    "glob": "^7.1.4",
    "handlebars": "^4.3.3",
    "handlebars-helpers": "^0.10.0",
    "jsonfile": "^5.0.0",
    "lodash": "^4.17.15",
    "mkdirp": "^0.5.1",
    "nanoid": "^2.0.3",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "path-match": "^1.2.4",
    "session-file-store": "^1.3.1",
    "sortablejs": "^1.10.1",
    "upath": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "chokidar": "^3.2.1",
    "concurrently": "^4.1.0",
    "copy-and-watch": "^0.1.4",
    "nodemon": "^1.19.1",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.23.0",
    "shelljs": "^0.8.3"
  }
}
