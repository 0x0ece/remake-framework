<div
  class="todos__todo"
  data-o-type="object"
  data-o-key-id="{{todo.id}}"
  data-o-key-is-complete="{{todo.isComplete}}"
  data-l-key-text
>
  <div class="todos__todo-checkbox-area hide-if-not-page-author">
    <input data-i="triggerSaveOnChange" type="checkbox" name="isComplete" value="true" {{#if todo.isComplete}}checked{{/if}}>
  </div>
<div 
  class="todos__todo-text has-multi-line-text"
  data-i-editable="text(text-multi-line)"
  data-l-target-text
>{{todo.text}}</div>
</div>